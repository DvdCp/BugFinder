<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_shape8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/errorTW1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Impossibile inviare la segnalazione"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/errorTW2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Controllare la connessione e riprovare"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#000"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_below="@id/RL1"
                android:layout_centerInParent="true"
                android:text="Riprova"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape10"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>