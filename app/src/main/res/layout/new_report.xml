<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/RL1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RL2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/circle_shape"
            android:layout_marginTop="-18dp">

            <LinearLayout
                android:id="@+id/cameraSelection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/backarrow"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:onClick="backToPrevious"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nuova Segnalazione"
                        android:layout_gravity="center"
                        android:textColor="#FFF"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="47dp"/>

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/questionmark"
                        android:layout_marginLeft="40dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="216dp"
                    android:layout_height="133dp"
                    android:background="@drawable/group_3"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="oppure"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:layout_marginTop="25dp"
                    android:textSize="25dp"
                    android:textStyle="normal" />

                <Button
                    android:text="Scegli foto"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_shape2"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/formNewReport"
            android:layout_below="@id/RL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleziona specie"
                android:layout_gravity="start"
                android:textColor="@color/lightGreen"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/specie"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="22dp"
                android:popupBackground="#FFF"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/formNewReport2"
            android:layout_below="@id/formNewReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luogo avvistamento"
                android:layout_gravity="start"
                android:textColor="@color/lightGreen"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:text="Seleziona localitÃ "
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:textColor="#127429"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:background="@drawable/circle_shape3"
                android:layout_marginLeft="25dp"
                android:paddingLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Avvistamento"
                android:layout_gravity="start"
                android:textColor="@color/lightGreen"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:text="gg/mm/aaaa"
                android:textAllCaps="false"
                android:textColor="#127429"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:background="@drawable/circle_shape3"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note aggiuntive"
                android:layout_gravity="start"
                android:textColor="@color/lightGreen"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_shape3"
                android:padding="8dp"
                android:textColor="#127429"
                android:hint="Inserisci qui eventuali note aggiuntive"
                android:textColorHint="#127429"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_marginLeft="0dp"
                android:gravity="top|left" />

            <Button
                android:text="Segnala"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape2"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>