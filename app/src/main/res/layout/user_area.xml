<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/RL1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RL2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/lightGreen"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/backarrow"
                    android:layout_marginLeft="10dp"
                    android:onClick="backToPrevious"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Area Utente"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFF"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LL1"
            android:layout_below="@id/RL2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_awesome_user_alt"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/userNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Alessandro Bergamo"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/lightGreen"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGreen" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/mail_icon2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:padding="0dp"
                    android:maxLines="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="alessandro.bergamo@virgilio.it"
                    android:textColorHint="@color/lightGreen"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGreen" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_awesome_user_alt"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/userUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="davcap"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/lightGreen"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGreen" />


            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_awesome_lock"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/userPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="********"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/lightGreen"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGreen" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL2"
            android:layout_centerInParent="true"
            android:layout_below="@id/LL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Password Dimenticata?"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/lightGreen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:text=" Recuperala"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#127429" />

        </LinearLayout>

        <Button
            android:id="@+id/reportsButton"
            android:layout_below="@id/LL2"
            android:layout_centerInParent="true"
            android:text="Le mie segnalazioni"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape2"
            android:layout_marginTop="60dp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>