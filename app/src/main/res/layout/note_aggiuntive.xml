<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RL2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-18dp">
    
    <RelativeLayout
        android:id="@+id/action_bar_note_aggiuntive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note Aggiuntive"
            android:textColor="@color/lightGreen"
            android:padding="8dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/note_aggiuntive"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_above="@+id/confirm_button"
        android:layout_below="@+id/action_bar_note_aggiuntive"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top|left"
        android:paddingLeft="8dp"
        android:textColor="#127429"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/confirm_button"
        android:text="Conferma"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_shape2_no_border"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:onClick="onConfirmButtonClick"/>

</RelativeLayout>
